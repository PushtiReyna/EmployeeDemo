@model IEnumerable<EmployeeDBFirstDemo.Models.Employee>

@{
    ViewData["Title"] = "Index";

}

<h1>List Of Employee</h1>

<div class=" container">
    <div class="row">
        <div class=" col-11 ">
            <h1 class="text-center">Employee Record</h1>

            <p>        
                <a class=" btn btn-sm btn-success m-1" asp-action="Create">Create New</a>
            </p>

            <table class=" table table-bordered">
                <tr class="text-center">
                    <th>EmployeeId</th>
                    <th>Employeename</th>
                    <th>Gender</th>
                    <th>Dob</th>
                    <th>Department</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Email</th>
                    <th>Mobile1</th>
                    <th>Mobile2</th>
                    <th>Action</th>
                </tr>
                @foreach (var data in Model)
                {
                    <tr class=" text-center">
                        <td>@data.EmployeeId</td>
                        <td>@data.Employeename</td>
                        <td>@data.Gender</td>
                        <td>@data.Dob</td>
                        <td>@data.Department</td>
                        <td>@data.Username</td>
                        <td>@data.Password</td>
                        <td>@data.Address</td>
                        <td>@data.Pincode</td>
                        <td>@data.Email</td>
                        <td>@data.Mobile1</td>
                        <td>@data.Mobile2</td>
                        <td>
                            <a class=" btn  btn-warning m-1 text-white" asp-action="Edit" asp-route-id="@data.EmployeeId">Edit</a>
                            <a class=" btn  btn-danger m-1 text-white" asp-action="Delete" asp-route-id="@data.EmployeeId">Delete</a>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>

